    "version": "0.2.0",
    "configurations": [
        {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ]
        },
        {
            "name": "Java Console App",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ],
            "externalConsole": true
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "jdkPath": "${env:JAVA_HOME}/bin"
        },
        {
            "type": "java",
            "name": "GameView",
            "request": "launch",
            "mainClass": "view.GameView",
            "projectName": "Last of Us - Legacy",
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "vmArgs": [
                "--module-path",
                "F:/GUC/Semester 4/Computer Science - CSEN401/Game/javafx-sdk-17.0.7/lib",
                "--add-modules",
                "javafx.controls,javafx.fxml"
            ]
        }
    ]
}